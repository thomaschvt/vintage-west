{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cars</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ entity.year }}</td>
            </tr>
            <tr>
                <th>Kilometers</th>
                <td>{{ entity.kilometers }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ entity.color }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Descriptionfr</th>
                <td>{{ entity.descriptionFr }}</td>
            </tr>
            <tr>
                <th>Descriptionen</th>
                <td>{{ entity.descriptionEn }}</td>
            </tr>
            <tr>
                <th>Descriptiones</th>
                <td>{{ entity.descriptionEs }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cars') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cars_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
