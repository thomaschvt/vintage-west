{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cars list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year</th>
                <th>Kilometers</th>
                <th>Color</th>
                <th>Type</th>
                <th>Descriptionfr</th>
                <th>Descriptionen</th>
                <th>Descriptiones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cars_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.kilometers }}</td>
                <td>{{ entity.color }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.descriptionFr }}</td>
                <td>{{ entity.descriptionEn }}</td>
                <td>{{ entity.descriptionEs }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cars_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cars_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cars_create') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
